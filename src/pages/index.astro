---
import LayoutGlobal from "../layouts/LayoutGlobal.astro";
import { sanityClient } from "sanity:client"
import { imageQuery } from "../lib/sanity-queries"
import SanityImage from "../components/SanityImage.astro";
import VideoStream from "../components/VideoStream.astro";
import Hero from "../components/SectionHero.astro";
import ThreeScene from "../components/3DScene.astro";

const homePageSettings = await sanityClient.fetch(`*[_type == "pageHome"][0]{
	subheading,
	button,
	projects[]->{ title, thumbnailVideo{ asset->{url} }, slug, tags[]->{ title, slug } }
}`)
---
<LayoutGlobal
	title="Home"
	description="New York City digital design director specializing in e-commerce for fashion & luxury brands."
	largeLogo={true}
>

	<Hero 
		subheading={homePageSettings.subheading}
		button={homePageSettings.button}
		projects={homePageSettings.projects}
	/>
	<!-- <ThreeScene /> -->
	<!-- <VideoStream /> -->

</LayoutGlobal>

